# Disable MultiViews to prevent conflicts
Options -MultiViews
RewriteEngine On
RewriteBase /

# 1. External Redirect: .html -> Clean URL (for SEO)
# Redirect /file.html to /file
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Redirect /file.php to /file
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 2. Internal Rewrite: Clean URL -> Actual File
# If the request is not a directory, and file.html exists, serve it
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# If the request is not a directory, and file.php exists, serve it
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Optional: Force HTTPS (uncomment if needed)
# RewriteCond %{HTTPS} off
